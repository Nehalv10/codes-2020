Bot.send("Hello, Welcome to the IMDB Movie Bot"); Bot.send("Enter any movie name:"); async function respond(inputText) { var response; var url = "https://www.omdbapi.com/?apikey=51b33037&t=" + inputText; var result = await CampK12.fetch("GET", url); console.log(result); if (result.Response == "True") { response = "The movie " + result.Title + " was released on " + result.Released + " was directed by " + result.Director + " and casted by " + result.Actors + " with a rating of " + result.imdbRating; } else { response = "The Movie does not exist"; } Bot.send(response); }
